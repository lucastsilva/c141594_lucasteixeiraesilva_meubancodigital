@model IBC.Models.sideBarView

<div class="sidebar sidebar-main sidebar-default">
    <div class="sidebar-content">
        <!-- Main navigation -->
        <div class="sidebar-category sidebar-category-visible">
            <div class="category-title h6">
                <span>Menu</span>
                <ul class="icons-list">
                    <li><a href="#" data-action="collapse"></a></li>
                </ul>
            </div>
            <div class="category-content sidebar-user">
                <div class="media">
                    <a href="#" class="media-left"><img src="~/assets/images/placeholder.jpg" class="img-circle img-sm" alt=""></a>
                    <div class="media-body">
                        <span class="media-heading text-semibold">@Model.nomeCliente</span>
                        <div class="text-size-mini text-muted">
                            Agencia <span class="user-info">@Model.agencia</span>
                            <br />
                            Conta <span class="user-info">@Model.contaCorrente</span>
                        </div>
                    </div>
                    <div class="media-right media-middle">
                        <ul class="icons-list">
                            <li>
                                <a href="#"><i class="icon-cog3"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="category-content no-padding">
                <ul class="navigation navigation-main navigation-accordion">
                    @foreach (var carrossel in Model.categoria.categoriasCarrossel)
                    {
                        <li>
                            <a href="#">
                                <img src="https://tgy64w74i567hklqjb-internetbanking.caixa.gov.br/@carrossel.imagemSmartphone" onload="this.width/=2;" />
                                @carrossel.titulo
                            </a>
                            <ul>
                                @foreach (var submenu in carrossel.submenus)
                                {
                                    <li>
                                        <a href="#" onclick="mostrarFavorito(@submenu.id)">@submenu.titulo</a>
                                        <ul>
                                            @if (submenu.id != 580)
                                            {
                                                foreach (var item in submenu.itens)
                                                {
                                                    <li>
                                                        <a href="#" onclick="mostrarFavorito(@item.id)">@item.titulo</a>
                                                    </li>
                                                }
                                            }                                            
                                        </ul>
                                    </li>

                                }
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <!-- /main navigation -->
    </div>
</div>
